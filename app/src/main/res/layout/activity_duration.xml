<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".Duration">

    <TextView
        android:id="@+id/currentcoin"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="보유 멜로디 코인   "
        android:textSize="20dp"
        android:textColor="#BBBBBB"/>

    <TextView
        android:id="@+id/currentcoin_edit"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="3000코인"
        android:textSize="30dp"
        android:textColor="#F8A45E"
        android:gravity="center"/>

        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:text="1000 코인"
                android:textSize="20dp"
                android:textColor="#BBBBBB"
                />
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:text="3000 코인"
                android:textSize="20dp"
                android:textColor="#BBBBBB"/>

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:text="5000 코인"
                android:textSize="20dp"
                android:textColor="#BBBBBB"/>

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:gravity="right"
                android:text="10000 코인"
                android:textSize="20dp"
                android:textColor="#BBBBBB"/>

        </RadioGroup>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="선물하기"
        android:textColor="@android:color/white"
        android:background="#F8A45E"
        android:textSize="20dp"/>

</LinearLayout>

